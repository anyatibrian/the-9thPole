  "private": true,
  "dependencies": {
    "all": "^0.0.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0"
  },
  "scripts": {
    "tslint": "tslint './src/**/*.{ts}'",
    "tslint:fix": "npm run tslint -- --fix",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "prettier": "prettier --write --config ./.prettierrc './src/**/*.{ts,tsx}'",
    "start": " node ./dist/server.js",
    "start-dev": "ts-node ./src/app.ts",
    "build-dev": "tsc && npm start",
    "dev": "nodemon -e ts -w ./src -x npm run start-dev",
    "test": "cross-env NODE_ENV=test npm run reset:db && NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/polyfill -r ts-node/register src/*/**/**/*spec.ts src/*/**/*.spec.ts src/**/*.spec.ts --timeout 20000 --exit"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@types/express": "^4.17.1",
    "@types/morgan": "^1.7.37",
    "@types/typescript": "^2.0.0",
    "install": "^0.13.0",
    "prettier": "^1.18.2",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.2"
  }
